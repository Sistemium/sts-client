.container.main

  .menu.noPagination

    h5.center User Agent

    input.form-control(ng-model="vm.searchText")

    .scroll-y(resize resize-offset-top='0')

      table(ng-table="vm.tableParams" class="table")

        thead

        tr(
        ng-repeat="session in $data | filter:vm.searchText"
        ng-class='{ disabled: session.destroyed, active: session.id === vm.currentSesstionId }'
        ng-click="vm.showDetails(session.id)"
        )
          td(data-title="'User Agent'")
           | {{ vm.split(session.userAgent) }}

  ui-view.sideView

